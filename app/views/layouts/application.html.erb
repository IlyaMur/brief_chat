<!DOCTYPE html>
<html>
<head>
<title>BriefChat</title>
<%= csrf_meta_tags %>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-8">
      <div class="card text-center mt-4 mb-4">
        <div class="card-body">
          Welcome to BriefChat, <b><%= current_user.nickname %></b>!
          
        </div>
      </div>
      <hr>
      <div class="mt-3">
        <h5> Users online: </h5>
      </div>
       <div id="online"></div>
      <hr>

      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
